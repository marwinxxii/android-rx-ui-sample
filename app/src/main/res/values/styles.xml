<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/Toolbar</item>
    </style>

    <style name="MainActivity" parent="BaseTheme" />

    <style name="Toolbar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SegmentedButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Price">
        <item name="android:digits">0123456789</item>
        <item name="android:hint">@string/price_to_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
